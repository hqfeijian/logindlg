.authorize-panel {
  position: fixed;
  top: 0;
  left: 0;
  /* 内容上下居中 */
  display: flex;
  flex-direction: column;
  justify-content: center; /*水平居中*/
  align-items: center; /*垂直居中*/
  width: 100%;
  height: 100vh;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.30);
}

.authorize-panel-content {
  width: 80%;
  display: flex;
  /* 内容上下居中 */
  flex-direction: column;
  justify-content: center; /*水平居中*/
  align-items: center; /*垂直居中*/
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 8px;
}
.common-btn{
  vertical-align:middle;
  font-size:28rpx;
  width:40%; 
  border-radius:60px;
  background:#fff; 
  border:1px solid #eb6100;
  color:#eb6100;
}